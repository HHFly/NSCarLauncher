<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg14151E">
    <RelativeLayout
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="77px">
        <ImageView
            android:layout_width="20px"
            android:layout_height="36px"
            android:background="@mipmap/bt_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_Text_default"
            android:textSize="36px"
            android:text="@string/设置"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_Text_default"
        android:textSize="36px"
        android:text="@string/车辆设置"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="127px">

        <RelativeLayout
            android:id="@+id/carset_layout"
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:layout_marginTop="45px"
            android:background="@color/color_bg1B1D28">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24px"
                android:textColor="@color/color_Text_default"
                android:textSize="30px"
                android:text="@string/行车模式"/>
            
            <ImageView
                android:layout_width="26px"
                android:layout_height="14px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="24px"
                android:background="@mipmap/spinner_bg"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/car_choose_layout"
            android:layout_width="689px"
            android:layout_height="wrap_content"
            android:background="@mipmap/set_language_laybg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/eco_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:textColor="@color/color_Text_default"
                    android:textSize="30px"
                    android:text="@string/经济"/>

                <ImageView
                    android:id="@+id/eco_mode_checkbox"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginRight="25px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/select_checkbox"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sport_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="78px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24px"
                    android:textColor="@color/color_Text_default"
                    android:textSize="30px"
                    android:text="@string/运动"/>

                <ImageView
                    android:id="@+id/sport_mode_checkbox"
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:layout_marginRight="25px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/select_checkbox"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>