<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="373px"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50px"
    android:layout_marginRight="50px"
    android:background="@mipmap/item_bg">
    <RelativeLayout
        android:id="@+id/rl_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px">

        <ImageView
            android:id="@+id/iv_fm"
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@mipmap/ic_navigation" />

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67px"
            android:layout_marginTop="90px"
            >
            <TextView

                android:id="@+id/tv_fm_hz"
                style="@style/BaseText.Tv"
                android:textSize="36px"
                android:text="91.8"
                />
            <TextView
                style="@style/BaseText.Tv"
                android:textSize="16px"
                android:text="MHZ"
                android:layout_toRightOf="@+id/tv_fm_hz"/>
        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/ll_fm"
            android:layout_marginTop="24px">

            <TextView
                android:id="@+id/tv_fm_name"
                style="@style/BaseText.Tv"
                android:layout_marginLeft="49px"
                android:text="@string/杭州交通经济广播"
                android:textSize="18px" />
            <View
                style="@style/BaseLine.Horizontal"
                android:layout_width="17px"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@+id/tv_fm_name"
                />
            <View
                style="@style/BaseLine.Horizontal"
                android:layout_width="17px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_fm_name"
                />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26px"
        android:text="@string/导航"
        android:textSize="48px"
        android:textColor="#EEEEEE"
        />
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        >

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="52px"
            android:layout_height="50px"
            android:src="@drawable/select_na"
            android:layout_gravity="center_horizontal"
            />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/nav_home"
                app:layout_constraintLeft_toLeftOf="@+id/nav_home"
               app:layout_constraintRight_toRightOf="@+id/nav_home"
                android:layout_marginTop="46px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/回家"
                android:textColor="@drawable/select_text_press_white_blue"
                android:textSize="20px" />

        <ImageView
            android:id="@+id/nav_company"
            android:layout_width="60px"
            android:layout_height="50px"
            app:layout_constraintLeft_toRightOf="@+id/nav_home"
            android:layout_marginLeft="100px"
            android:src="@drawable/select_na_2"
            />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/nav_company"
                app:layout_constraintLeft_toLeftOf="@+id/nav_company"
                app:layout_constraintRight_toRightOf="@+id/nav_company"
                android:layout_marginTop="46px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/上班"
                android:textColor="@drawable/select_text_press_white_blue"
                android:textSize="20px" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>