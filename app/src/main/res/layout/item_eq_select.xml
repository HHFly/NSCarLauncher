<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="200px"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_set_eq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:textSize="36px"
        android:textColor="@drawable/select_music_local_text_bg2"/>
    <ImageView
        android:id="@+id/iv_set_eq"
        android:layout_below="@+id/tv_set_eq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_set_eq_select_img"/>
</RelativeLayout>