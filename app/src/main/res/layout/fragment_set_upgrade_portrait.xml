<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bg14151E">

    <RelativeLayout
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="77px">
        <ImageView
            android:layout_width="20px"
            android:layout_height="36px"
            android:background="@mipmap/bt_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_centerVertical="true"
            android:textColor="@color/color_Text_default"
            android:textSize="36px"
            android:text="@string/设置"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_Text_default"
        android:textSize="36px"
        android:text="@string/升级"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="172px"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/sys_upgrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg1B1D28"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    style="@style/BaseText.Tv"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="110px"
                    android:text="@string/sysupgrade"
                    android:textSize="36px" />
                <ImageView
                    android:layout_width="27px"
                    android:layout_height="48px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1460px"
                    android:src="@mipmap/set_button_return_pre" />
            </LinearLayout>
            <View
                style="@style/BaseLine.Horizontal"
                android:layout_alignParentBottom="true"
                android:background="#3C3C3C" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/factory_reset"
            android:layout_width="wrap_content"
            android:layout_height="78px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    style="@style/BaseText.Tv"
                    android:layout_marginLeft="23px"
                    android:layout_centerVertical="true"
                    android:text="@string/reset"
                    android:textSize="30px" />
                <ImageView
                    android:layout_width="14px"
                    android:layout_height="26px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:background="@mipmap/icon_go" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_set_upgrade"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/set_upgrade"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>