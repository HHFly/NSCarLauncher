<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_f_fm_bg">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginTop="82px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="40px"
            android:layout_height="31px"
            android:layout_marginLeft="30px"
            android:src="@mipmap/set_button_return"
            android:layout_centerVertical="true"
            />
        <TextView style="@style/BaseText.Tv"
            android:textSize="36px"
            android:text="@string/日期和时间"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110px"/>

        <View style="@style/BaseLine.Horizontal"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">

        <TextView style="@style/BaseText.Tv"
            android:textSize="36px"
            android:text="@string/使用24小时制"
           android:layout_marginTop="16px"
            android:layout_marginLeft="110px"/>
        <TextView style="@style/BaseText.Tv"
            android:textSize="24px"
            android:text="下午1:00"
            android:textColor="#989898"
            android:layout_marginTop="59px"
            android:layout_marginLeft="110px"/>

        <CheckBox
            android:id="@+id/cb_date"
            android:layout_centerVertical="true"
            android:layout_marginRight="100px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View style="@style/BaseLine.Horizontal"
            android:background="#3C3C3C"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>