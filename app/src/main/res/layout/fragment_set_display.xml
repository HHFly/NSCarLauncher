<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_f_fm_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="82px">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="40px"
            android:layout_height="31px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@mipmap/set_button_return" />

        <TextView
            style="@style/BaseText.Tv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110px"
            android:text="@string/显示"
            android:textSize="36px" />

        <View
            style="@style/BaseLine.Horizontal"
            android:layout_alignParentBottom="true"
            android:background="#3c3c3c" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="96px"
            android:orientation="horizontal">

            <TextView
                style="@style/BaseText.Tv"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110px"
                android:text="@string/亮度"
                android:textSize="36px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="73px"
                android:src="@mipmap/ic_dispaly_small" />

            <SeekBar
                android:id="@+id/seekbar_display"
                android:layout_width="700px"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:maxHeight="3.4dp"
                android:minHeight="3.4dp"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@mipmap/ic_volume" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:src="@mipmap/ic_display_big" />
        </LinearLayout>

        <View
            style="@style/BaseLine.Horizontal"
            android:layout_alignParentBottom="true"
            android:background="#3C3C3C" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginRight="90px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                style="@style/BaseText.Tv"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200px"
                android:text="@string/deskbackground"
                android:textSize="36px" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="800px"
                android:layout_height="match_parent"
                android:layout_marginLeft="73px"
                android:layout_gravity="center_vertical"
                android:entries="@array/ctype"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>