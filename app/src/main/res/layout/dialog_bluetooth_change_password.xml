<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="315dp"
    android:background="@drawable/phone_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:text="更改蓝牙密码"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="94dp"
        android:text="旧密码："
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dialog_bluetooth_previous_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="94dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="158dp"
        android:text="新密码："
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/bluetooth_input_new_password"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="149dp"
        android:hint="请输入蓝牙密码"
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/white"
        android:textSize="20sp" 
        android:background="@mipmap/bg_input_password"/>

    <ImageButton
        android:id="@+id/bluetooth_input_confirm_password"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="229dp"
        android:background="@drawable/set_wifi_info_confirm" />

    <ImageButton
        android:id="@+id/bluetooth_input_cancel_password"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="229dp"
        android:background="@drawable/set_wifi_info_cancel" />

</RelativeLayout>