<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500px"
    android:layout_height="315px"
    android:background="@drawable/phone_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:textColor="@android:color/white"
        android:text="更改蓝牙密码"
        android:textSize="23px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="94px"
        android:text="旧密码："
        android:textColor="@android:color/white"
        android:textSize="20px" />

    <TextView
        android:id="@+id/dialog_bluetooth_previous_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125px"
        android:layout_marginTop="94px"
        android:textColor="@android:color/white"
        android:textSize="20px"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="158px"
        android:text="新密码："
        android:textColor="@android:color/white"
        android:textSize="20px" />

    <EditText
        android:id="@+id/bluetooth_input_new_password"
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="120px"
        android:layout_marginTop="149px"
        android:hint="请输入蓝牙密码"
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/white"
        android:textSize="20px" 
        android:background="@mipmap/bg_input_password"/>

    <ImageButton
        android:id="@+id/bluetooth_input_confirm_password"
        android:layout_width="140px"
        android:layout_height="44px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="229px"
        android:background="@drawable/set_wifi_info_confirm" />

    <ImageButton
        android:id="@+id/bluetooth_input_cancel_password"
        android:layout_width="140px"
        android:layout_height="44px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60px"
        android:layout_marginTop="229px"
        android:background="@drawable/set_wifi_info_cancel" />

</RelativeLayout>