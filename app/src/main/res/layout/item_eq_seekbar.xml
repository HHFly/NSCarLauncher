<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="180px"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<TextView
    android:id="@+id/tv_eq_hz"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="36px"
    android:textColor="#EEEEEE"
    android:layout_gravity="center_horizontal"
    />

    <com.kandi.dell.nscarlauncher.widget.VerticalSeekBarII
        android:layout_gravity="center_horizontal"
        android:id="@+id/eq_seekbar"
        android:maxHeight="3.4dp"
        android:minHeight="3.4dp"
        android:layout_width="wrap_content"
        android:layout_height="342px"
        android:secondaryProgress="100"
       android:progressDrawable="@drawable/seekbar_style"
        android:thumb="@mipmap/ic_volume_two"
        />
    <TextView
        android:id="@+id/tv_eq_band"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:textColor="#EEEEEE"
        android:layout_marginTop="23px"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>