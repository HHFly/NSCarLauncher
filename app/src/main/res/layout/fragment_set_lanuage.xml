<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_f_fm_bg">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginTop="82px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="40px"
            android:layout_height="31px"
            android:layout_marginLeft="30px"
            android:src="@mipmap/set_button_return"
            android:layout_centerVertical="true"
            />
        <TextView style="@style/BaseText.Tv"
            android:textSize="36px"
            android:text="@string/语言和输入法"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110px"/>

        <View style="@style/BaseLine.Horizontal"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">

        <TextView style="@style/BaseText.Tv"
            android:textSize="36px"
            android:text="@string/语言"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110px"/>

        <View style="@style/BaseLine.Horizontal"
            android:background="#3C3C3C"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">

        <TextView style="@style/BaseText.Tv"
            android:textSize="24px"
            android:textColor="#989898"
            android:text="@string/语言"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110px"/>

        <View style="@style/BaseLine.Horizontal"
            android:background="#3C3C3C"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">

        <TextView style="@style/BaseText.Tv"
            android:textSize="36px"
            android:text="@string/键盘和输入法"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110px"/>

        <View style="@style/BaseLine.Horizontal"
            android:background="#3C3C3C"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96px"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px">

        <TextView style="@style/BaseText.Tv"
            android:textSize="24px"
            android:textColor="#989898"
            android:text="@string/语言"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110px"/>

        <View style="@style/BaseLine.Horizontal"
            android:background="#3C3C3C"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>