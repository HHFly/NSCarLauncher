<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500px"
    android:layout_height="270px"
    android:background="@drawable/phone_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/current_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:textColor="@android:color/white"
        android:textSize="23px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="85px"
        android:text="IP地址："
        android:textColor="#ADADAD"
        android:textSize="18px" />

    <TextView
        android:id="@+id/current_wifi_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="85px"
        android:textColor="@android:color/white"
        android:textSize="18px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="120px"
        android:text="子网掩码："
        android:textColor="#ADADAD"
        android:textSize="18px" />

    <TextView
        android:id="@+id/current_wifi_submask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="120px"
        android:textColor="@android:color/white"
        android:textSize="18px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="155px"
        android:text="网关："
        android:textColor="#ADADAD"
        android:textSize="18px" />

    <TextView
        android:id="@+id/current_wifi_gateway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="155px"
        android:textColor="@android:color/white"
        android:textSize="18px" />

    <ImageButton
        android:id="@+id/current_wifi_left"
        android:layout_width="140px"
        android:layout_height="44px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="200px"
        android:background="@drawable/set_wifi_current_left" />
    
    <ImageButton
        android:id="@+id/current_wifi_right"
        android:layout_width="140px"
        android:layout_height="44px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60px"
        android:layout_marginTop="200px"
        android:background="@drawable/set_wifi_current_right" />

</RelativeLayout>