<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
<ImageView
    android:id="@+id/iv_music_mode"
    android:layout_width="36px"
    android:layout_height="34px"
    android:src="@mipmap/ic_music_mode"
    android:layout_gravity="center_vertical"/>
  <ImageView
      android:layout_width="46px"
      android:layout_height="50px"
      android:src="@mipmap/ic_fm_left"
      android:layout_marginLeft="72px"
      android:layout_gravity="center_vertical"/>
    <ImageView
        android:id="@+id/music_play"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@mipmap/ic_music_stop"
        android:layout_marginLeft="72px"
        android:layout_gravity="center_vertical"/>
    <ImageView
        android:layout_width="46px"
        android:layout_height="50px"
        android:src="@mipmap/ic_fm_right"
        android:layout_marginLeft="72px"
        android:layout_gravity="center_vertical"/>
    <ImageView
    android:layout_width="30px"
    android:layout_height="34px"
    android:src="@mipmap/ic_music_list"
    android:layout_marginLeft="72px"
    android:layout_gravity="center_vertical"/>
    <ImageView
        android:layout_width="31px"
        android:layout_height="27px"
        android:src="@mipmap/ic_music_collect"
        android:layout_marginLeft="72px"
        android:layout_gravity="center_vertical"/>
</LinearLayout>