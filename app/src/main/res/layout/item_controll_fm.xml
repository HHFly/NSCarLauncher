<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="202px"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ctl_iv_left"
            android:layout_width="16px"
            android:layout_height="23px"
            android:layout_marginTop="12px"
            android:background="@drawable/select_home_ctll_last" />

        <TextView
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/上一台"
            android:maxLength="4"

            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@drawable/select_text_press_white_blue"
            android:textSize="18px" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="22px"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ctl_iv_center"
        android:layout_width="48px"
        android:layout_height="48px"
        android:src="@mipmap/ic_off"
        />
        <TextView
            android:layout_marginTop="6px"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/开关"
            android:textSize="18px"
            android:textColor="@drawable/select_text_press_white_blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20px"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/ctl_iv_right"
        android:layout_gravity="center"
        android:layout_width="19px"
        android:layout_height="23px"
        android:layout_marginTop="12px"
        android:background="@drawable/select_home_ctll_next"
       />
        <TextView
            android:layout_marginTop="20px"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/下一台"
            android:textSize="18px"
            android:textColor="@drawable/select_text_press_white_blue"/>
    </LinearLayout>
</LinearLayout>