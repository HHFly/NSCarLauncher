<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500px"
    android:layout_height="250px"
    android:background="@drawable/phone_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/wifi_input_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:textColor="@android:color/white"
        android:textSize="23px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="94px"
        android:text="密码："
        android:textColor="@android:color/white"
        android:textSize="20px" />

    <EditText
        android:id="@+id/wifi_input_password"
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:layout_marginRight="40px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="85px"
        android:hint="请输入无线密码"
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/white"
        android:textSize="20px" 
        android:background="@mipmap/bg_input_password"/>

    <ImageButton
        android:id="@+id/wifi_input_confirm"
        android:layout_width="140px"
        android:layout_height="44px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="165px"
        android:background="@drawable/set_wifi_info_confirm" />

    <ImageButton
        android:id="@+id/wifi_input_cancel"
        android:layout_width="140px"
        android:layout_height="44px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60px"
        android:layout_marginTop="165px"
        android:background="@drawable/set_wifi_info_cancel" />

</RelativeLayout>