<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="373px"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50px"
    android:layout_marginRight="50px"
    android:background="@mipmap/item_bg"
    android:id="@+id/rl_carctrl">
    <RelativeLayout
        android:id="@+id/rl_carcontroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px">

        <ImageView
            android:id="@+id/iv_fm"
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@mipmap/ic_carcontroll" />

        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67px"
            android:layout_marginTop="90px"
            >
            <TextView

                android:id="@+id/tv_fm_hz"
                style="@style/BaseText.Tv"
                android:textSize="36px"
                android:text="91.8"
                />
            <TextView
                style="@style/BaseText.Tv"
                android:textSize="16px"
                android:text="MHZ"
                android:layout_toRightOf="@+id/tv_fm_hz"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26px"
        android:text="@string/整车控制"
        android:textSize="48px"
        android:textColor="#EEEEEE"
        />

    <ImageView
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"

        android:src="@drawable/select_home_carctrl"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17px"
        android:layout_gravity="center_horizontal"
        android:text="@string/整车控制"
        android:textSize="20px"
        android:textColor="@drawable/select_text_press_white_blue"/>

</LinearLayout>