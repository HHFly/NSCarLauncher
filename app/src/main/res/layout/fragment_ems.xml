<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13151D">

    <RelativeLayout
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginLeft="23px"
        android:layout_marginTop="77px">
        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="20px"
            android:layout_height="36px"
            android:background="@mipmap/bt_back"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_Text_default"
        android:textSize="36px"
        android:text="@string/能量管理"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="127px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bat_progress"
                android:layout_width="320px"
                android:layout_height="153px"
                android:layout_marginTop="139px"
                android:layout_marginLeft="225px"
                android:background="@mipmap/bat_soc_low"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="343px"
                android:layout_marginLeft="269px">
                <ImageView
                    android:layout_width="18px"
                    android:layout_height="36px"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/bat_soc"/>

                <TextView
                    android:id="@+id/soctxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="51px"
                    android:textSize="30px"
                    android:textColor="@color/color_Text_default"
                    android:text="@string/剩余电量"/>

                <TextView
                    android:id="@+id/soc_per_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/soctxt"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8px"
                    android:textSize="30px"
                    android:textColor="@color/color_ldark_blue_default"/>
            </RelativeLayout>

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="307px"
            android:layout_marginTop="470px"
            android:layout_centerHorizontal="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/select_carctrl_bg">
                    
                    <TextView
                        android:id="@+id/ems_cV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="77px"
                        android:text="@string/总电压"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />
                    
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/select_carctrl_bg">

                    <TextView
                        android:id="@+id/ems_cA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77px"
                        android:layout_centerHorizontal="true"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px"
                        android:text="@string/总电流"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/select_carctrl_bg">

                    <TextView
                        android:id="@+id/ems_highestT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77px"
                        android:layout_centerHorizontal="true"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px"
                        android:text="@string/最高温度"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_car_backfog_light_layout"
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/select_carctrl_bg">

                    <TextView
                        android:id="@+id/ems_lowestT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77px"
                        android:layout_centerHorizontal="true"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px"
                        android:text="@string/最低温度"/>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5px">
                <RelativeLayout
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="40px"
                    android:background="@drawable/select_carctrl_bg">

                    <TextView
                        android:id="@+id/ems_highestCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77px"
                        android:layout_centerHorizontal="true"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px"
                        android:text="@string/单体最高"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/select_carctrl_bg">

                    <TextView
                        android:id="@+id/ems_lowestCell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77px"
                        android:layout_centerHorizontal="true"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px"
                        android:text="@string/单体最低"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/select_carctrl_bg">

                    <TextView
                        android:id="@+id/ems_IR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77px"
                        android:layout_centerHorizontal="true"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px"
                        android:text="@string/绝缘电阻"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="168px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:background="@drawable/select_carctrl_bg">

                    <TextView
                        android:id="@+id/ems_batnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textSize="36px"
                        android:textColor="@color/color_dark_blue_default"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77px"
                        android:layout_centerHorizontal="true"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px"
                        android:text="@string/电池数量"/>

                </RelativeLayout>
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</RelativeLayout>