<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13151D">

    <RelativeLayout
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginLeft="23px"
        android:layout_marginTop="77px">
        <ImageView
            android:id="@+id/bt_back"
            android:layout_width="20px"
            android:layout_height="36px"
            android:background="@mipmap/bt_back"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_Text_default"
        android:textSize="36px"
        android:text="@string/空调"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="127px"
        android:layout_marginBottom="112px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="268px"
                android:layout_height="268px"
                android:layout_marginTop="48px"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/air_temp_bg">
                <TextView
                    android:id="@+id/air_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80px"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_Text_default"
                    android:textSize="60px"
                    android:text="18℃"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/air_temp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_Text_default"
                    android:textSize="24px"
                    android:text="@string/室内温度"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="212px"
                    android:layout_marginTop="358px">
                    <ImageView
                        android:layout_width="21px"
                        android:layout_height="30px"
                        android:background="@mipmap/air_temp_icon"/>
                    <TextView
                        android:id="@+id/set_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33px"
                        android:textColor="@color/color_Text_default"
                        android:textSize="24px"
                        android:text="温度23°"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="412px"
                    android:layout_marginTop="358px">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:background="@mipmap/air_btn_air_fan_big" />
                    <TextView
                        android:id="@+id/set_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="42px"
                        android:textColor="@color/color_Text_default"
                        android:textSize="24px"
                        android:text="风速4档"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="307px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/bt_airctrl_off"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="40px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_off_img"
                        android:layout_width="36px"
                        android:layout_height="37px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25px"
                        android:background="@drawable/select_airctrl_btn_off" />

                    <TextView
                        android:id="@+id/bt_airctrl_off_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/OFF"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_ac"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_ac_img"
                        android:layout_width="34px"
                        android:layout_height="40px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25px"
                        android:background="@drawable/select_airctrl_ac" />

                    <TextView
                        android:id="@+id/bt_airctrl_ac_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/AC"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_ptc"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_ptc_img"
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25px"
                        android:background="@drawable/select_airctrl_ptc" />

                    <TextView
                        android:id="@+id/bt_airctrl_ptc_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/PTC"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_incycle"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_incycle_img"
                        android:layout_width="44px"
                        android:layout_height="26px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32px"
                        android:background="@drawable/select_airctrl_incycle" />

                    <TextView
                        android:id="@+id/bt_airctrl_incycle_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/内循环"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_outcycle"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_outcycle_img"
                        android:layout_width="44px"
                        android:layout_height="26px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32px"
                        android:background="@drawable/select_airctrl_outcycle" />

                    <TextView
                        android:id="@+id/bt_airctrl_outcycle_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/外循环"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6px">

                <RelativeLayout
                    android:id="@+id/bt_airctrl_head"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="40px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_head_img"
                        android:layout_width="48px"
                        android:layout_height="34px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25px"
                        android:background="@drawable/select_airctrl_head" />

                    <TextView
                        android:id="@+id/bt_airctrl_head_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/吹面"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_foot"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_foot_img"
                        android:layout_width="48px"
                        android:layout_height="34px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25px"
                        android:background="@drawable/select_airctrl_foot" />

                    <TextView
                        android:id="@+id/bt_airctrl_foot_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/吹脚"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_head_foot"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_head_foot_img"
                        android:layout_width="48px"
                        android:layout_height="33px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25px"
                        android:background="@drawable/select_airctrl_head_foot" />

                    <TextView
                        android:id="@+id/bt_airctrl_head_foot_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/吹面吹脚"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_foot_win"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_foot_win_img"
                        android:layout_width="44px"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="28px"
                        android:background="@drawable/select_airctrl_foot_win" />

                    <TextView
                        android:id="@+id/bt_airctrl_foot_win_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/吹脚除雾"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bt_airctrl_defog"
                    android:layout_width="134px"
                    android:layout_height="138px"
                    android:layout_marginLeft="6px"
                    android:clickable="true"
                    android:background="@drawable/select_airctrl_bg">

                    <ImageView
                        android:id="@+id/bt_airctrl_defog_img"
                        android:layout_width="44px"
                        android:layout_height="33px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="28px"
                        android:background="@drawable/select_airctrl_defog" />

                    <TextView
                        android:id="@+id/bt_airctrl_defog_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="83px"
                        android:text="@string/除霜除雾"
                        android:textColor="@drawable/select_text_color"
                        android:textSize="24px" />

                </RelativeLayout>

            </TableRow>
        </TableLayout>

    </RelativeLayout>

</RelativeLayout>