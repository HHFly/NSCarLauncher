<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="60px"
    android:background="@drawable/shape_blue_s_black_bg"
    android:layout_gravity="top|center_vertical"
    android:gravity="center_vertical"
    >
    <ImageView
        android:layout_marginLeft="25px"
        android:layout_width="19px"
        android:layout_height="24px"
        android:src="@mipmap/ic_volume_left"/>
    <SeekBar
        android:id="@+id/thumb_volume"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:maxHeight="3.4dp"
        android:minHeight="3.4dp"
        android:progressDrawable="@drawable/seekbar_style"
        android:thumb="@mipmap/ic_volume"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"

        />
    <ImageView
        android:id="@+id/imagebt_volume_show"
        android:layout_width="42px"
        android:layout_height="38px"
        android:layout_marginRight="25px"
         />
</LinearLayout>