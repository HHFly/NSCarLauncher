<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="50px"
      >

        <ImageView
            android:id="@+id/tv_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"/>
        <ImageView
            android:id="@+id/iv_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_signal"
            />
        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_signal"
            android:layout_marginLeft="25px"

            />
        <ImageView
            android:id="@+id/iv_blueTooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_wifi"
            android:layout_marginLeft="25px"

            />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_car_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_blueTooth"
            android:layout_marginLeft="25px"

            />

        <ImageView
            android:id="@+id/iv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
            <TextView
                android:id="@+id/tv_title_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40px"
                android:textSize="18px"
                android:textColor="#ffffff"
                />
        <ImageView
            android:id="@+id/iv_t_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14px"
            android:layout_toLeftOf="@+id/tv_title_date"
            android:layout_marginRight="25px"
            android:background="@mipmap/home_top_btn1_01"
            />
        <TextView
            android:id="@+id/tv_t_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_t_power"
            android:layout_marginRight="10px"
            android:textSize="18px"
            android:textColor="#ffffff"
            />

    </RelativeLayout>
        <include layout="@layout/titlebar" />
    </RelativeLayout>
</FrameLayout>